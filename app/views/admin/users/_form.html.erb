<%= form_for [:admin, @user] do |f| %>
  <div class="box-body">
    <%= render "admin/shared/error_messages", object: @user %>
    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon">
          <i class="fa fa-newspaper-o style-icon"></i>
        </span>
        <%= f.text_field :name, placeholder: t("name"), class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon">
          <i class="fa fa-envelope-o style-icon"></i>
        </span>
        <%= f.text_field :email, placeholder: t("email"), class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon">
          <i class="fa fa-phone-square style-icon"></i>
        </span>
        <%= f.text_field :phone, placeholder: t("phone"), class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon">
          <i class="fa fa-globe style-icon"></i>
        </span>
        <%= f.text_field :address, placeholder: t("address"), class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon">
          <i class="fa fa-unlock-alt style-icon"></i>
        </span>
        <%= f.text_field :password, placeholder: t("password"), class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon">
          <i class="fa fa-unlock-alt style-icon"></i>
        </span>
        <%= f.password_field :password_confirmation, placeholder: t("confirmation"), class: "form-control" %>
      </div>
    </div>
    <%= f.submit t("submit"), class: "btn btn-primary" %>
  </div>
<% end %>
