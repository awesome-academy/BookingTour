<h1><%= t "app.login.login" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>
      <%= f.label :email, t("app.login.email") %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label :password, t("app.login.password") %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.submit t("app.login.login"), class: "btn btn-primary" %>
    <% end %>
    <p>
      <%= t "app.login.newuser" %> <%= link_to t("app.sign_up.creataccount"), signup_path %></p>
  </div>
</div>
